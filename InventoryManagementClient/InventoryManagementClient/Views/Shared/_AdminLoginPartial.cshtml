@{
    var userInfo = Context.Items["UserInfo"] as UserInfo;
}
@if (userInfo != null)
{
    <div class="manu-top-wraper">
        <img id="loginUserPhoto" class="rounded-circle img-thumbnail z-depth-1" src="~/images/defaultImage.jpg"
             style="height: 100px; width: 100px" alt="Photo" />
        <ul class="p-0 mt-1">
            <li class="nav-item font-weight-bold mb-2" id="loginUserName"></li>
            <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle text-decoration-none p-0" id="navbarDropdownMenuLink"
                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    @userInfo.Username
                </a>
                <div class="dropdown-menu dropdown-dark" aria-labelledby="navbarDropdownMenuLink">
                    <a class="dropdown-item" href="/Account/Profile">
                        <i class="fal fa-user"></i>
                        Profile
                    </a>
                    <a class="dropdown-item" href="/Account/ChangePassword">
                        <i class="fal fa-lock"></i>
                        Change Password
                    </a>
                    <div class="dropdown-divider"></div>
                    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm">
                        <a class="dropdown-item" href="/Account/Logout">
                            <i class="fal fa-sign-out-alt"></i>
                            Logout
                        </a>
                    </form>
                </div>
            </li>
        </ul>
    </div>
    <hr />
    <ul id="menuItem">
        @if (userInfo.Role.ToLower() == "admin")
        {
            <li>
                <strong>
                    <span class="fas fa-tachometer-alt"></span>
                    <a class="links link-active" href="/Dashboard/Index">Dashboard</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-truck"></span>
                    <a class="links link-active" href="/Suppliers/Index">Suppliers</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-users"></span>
                    <a class="links link-active" href="/Customers/Index">Customers</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-list"></span>
                    <a class="links link-active" href="/Product/Categories">Product Categories</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-boxes"></span>
                    <a class="links link-active" href="/Product/Index">Products</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-file-invoice"></span>
                    <a class="links link-active" href="/Incoming/Index">Incoming Receipts</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-file-invoice"></span>
                    <a class="links link-active" href="/Outgoing/Index">Outgoing Orders</a>
                </strong>
            </li>
            <li>
                <strong>
                    <span class="fas fa-users"></span>
                    <a class="links link-active" href="/Users/Index">Users</a>
                </strong>
            </li>
        }
    </ul>
}
