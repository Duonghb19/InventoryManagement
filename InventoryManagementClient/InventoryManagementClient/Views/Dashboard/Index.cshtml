@{
    ViewBag.Title = "DoashBoard";
    Layout = "_AdminLayout";
}
<div class=" m-md-3">
    <div class="container">
        <h1>Revenue Chart</h1>
        <canvas id="revenueChart"></canvas>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery"></script>
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    $(function () {
        // Gọi API để lấy dữ liệu doanh thu
        $.ajax({
            url: "/api/dashboard/revenue?month=8&year=2023", // Thay đổi tham số theo ý muốn
            type: "GET",
            headers: { 'Authorization': `Bearer ${userInfo.token}` },
            success: function (data) {
                var revenueData = {
                    labels: data.labels, // Mảng chứa các nhãn thời gian (ngày, tháng, năm)
                    datasets: [
                        {
                            label: "Revenue",
                            backgroundColor: "rgba(75,192,192,0.2)", // Màu nền cột
                            borderColor: "rgba(75,192,192,1)", // Màu viền cột
                            borderWidth: 1,
                            data: data.revenue, // Mảng chứa các giá trị doanh thu tương ứng
                        }
                    ]
                };

                // Vẽ biểu đồ cột
                var ctx = document.getElementById("revenueChart").getContext("2d");
                new Chart(ctx, {
                    type: 'bar',
                    data: revenueData,
                    options: {
                        scales: {
                            y: {
                                beginAtZero: true
                            }
                        }
                    }
                });
            },
            error: function (error) {
                console.log("Error:", error);
            }
        });
    });
</script>